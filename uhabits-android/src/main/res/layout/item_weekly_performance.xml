<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Score Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weekDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week of Jan 15"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grey_800" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/weekScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85/100"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_500" />

                <ProgressBar
                    android:id="@+id/weekScoreProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:max="100"
                    android:progress="85"
                    android:progressTint="@color/green_500"
                    android:progressBackgroundTint="@color/grey_300" />

            </LinearLayout>

        </LinearLayout>

        <!-- Habits Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/bestHabitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best: Exercise"
                android:textSize="12sp"
                android:textColor="@color/green_600"
                android:drawableStart="@drawable/ic_star_small"
                android:drawablePadding="4dp"
                android:drawableTint="@color/green_600" />

            <TextView
                android:id="@+id/worstHabitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Needs work: Reading"
                android:textSize="12sp"
                android:textColor="@color/orange_600"
                android:drawableStart="@drawable/ic_warning_small"
                android:drawablePadding="4dp"
                android:drawableTint="@color/orange_600" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
