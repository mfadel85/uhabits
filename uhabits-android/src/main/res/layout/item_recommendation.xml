<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Priority Indicator -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/orange_500" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/recommendationTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus Habit"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/blue_600"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Consider focusing more attention on 'Exercise' - current performance is 45%"
                android:textSize="14sp"
                android:textColor="@color/grey_800"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Action Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/grey_400" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
